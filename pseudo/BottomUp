A <- Array
n <- elements
i <- index
j <- index

BEGIN
    IF n < 2
        return
    i <- 1
    WHILE i < n
        j <- 0
        WHILE j < n
            mid <- j + i
            right <- j + 2*i

            IF mid >= n
                break

            IF right > n
                right <- n

            merge(A, j, mid, right)

            j ← j + 2*i
        i ← i * 2
END